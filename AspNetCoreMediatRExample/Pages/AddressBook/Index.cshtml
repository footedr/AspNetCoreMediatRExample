@page
@using AspNetCoreMediatRExample.Pages.AddressBook
@model AspNetCoreMediatRExample.Pages.AddressBook.IndexModel
@{
    ViewData["Title"] = "Address Book";
}

<h1>Address Book Entries</h1>

<div class="container-fluid">
    <a asp-page="Create">Create New Entry</a>

    <ul class="list-group">
        @foreach (var entry in AddressDb.Addresses)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-8">
                        @($"{entry.Lines1And2()}, {entry.City}, {entry.State} {entry.PostalCode}")
                    </div>
                    <div class="col-md-2"><a asp-page="Edit" asp-route-id="@entry.Id">Edit</a></div>
                    <div class="col-md-2"><a asp-page="Delete">Delete</a></div>
                </div>
            </li>
        }
    </ul>
</div>